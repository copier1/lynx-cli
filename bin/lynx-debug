#!/usr/bin/env node

var program = require('commander')
var build = require('../lib/build')
var androidDebugRun = require('../lib/android-debug-run')
var projectWatcher = require('../lib/project-watcher')
var logger = require('../lib/logger')

function run() {
  program.parse(process.argv)

  var platform = program.args[0]
  var name = program.args[1]

  if (platform === 'android') {
    build(name + '.vue', androidDebugRun)
  }else{
    logger.fatal("Please check debug platform, only support android/ios")
  }
  projectWatcher(name)
}

run()
